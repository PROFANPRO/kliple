<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes" />
  <title>Нулевой бот</title>
  <!-- TonConnect SDK -->
  <script src="https://unpkg.com/@tonconnect/sdk@2.2.2/dist/tonconnect-sdk.min.js"></script>
  <style>
    body {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
      font-family: Arial, sans-serif;
      background: #f0f0f0;
    }
    #walletBtn {
      padding: 12px 24px;
      font-size: 18px;
      border: none;
      border-radius: 10px;
      background: #0088cc;
      color: white;
      cursor: pointer;
    }
    #walletBtn:hover {
      background: #0077b3;
    }
  </style>
</head>
<body>
  <button id="walletBtn">Подключить кошелёк</button>

  <script>
    const tonConnect = new TonConnectSDK.TonConnect({
      manifestUrl: 'https://raw.githubusercontent.com/PROFANPRO/kliple/refs/heads/main/Tonconnect-manifest.json'
    });

    async function connectWallet() {
      try {
        const wallet = await tonConnect.connect();
        alert("Кошелёк подключен: " + wallet.account.address);
      } catch (e) {
        console.error("Ошибка подключения:", e);
      }
    }

    document.getElementById('walletBtn').addEventListener('click', connectWallet);
  </script>
</body>
